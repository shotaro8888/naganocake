<div class="container">
  
  <div class="row mt-5 ml-3">
    <div class="bg-secondary">
      <h4>注文商品一覧</h4>
    </div>
  </div>
  
  <div class="row mt-3">
    <table class="table">
      <thead>
        <th>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td></td>
          <td><%= link_to admin_order_path(order.id), class: "text-dark" do %><%= order.created_at.strftime('%Y/%m/%d %H:%M') %><% end %></td>
          <td><%= order.customer.last_name + order.customer.first_name %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.amount %>
            <% end %>
          </td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>


