<div class="container">
  <div class="row mt-5 ml-3">
    <div class="bg-secondary">
      <h4>商品編集</h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-12">
    　<%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
      <table class="table table-md">
        <tr><th>商品画像</th><td><%= f.file_field :image, accept: "image/*" %></td></tr>
        <tr><th>商品名</th><td><%= f.text_field :name %></td></tr>
        <tr><th>商品説明</th><td><%= f.text_area :introduction %></td></tr>
        <tr><th>ジャンル</th><td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td></tr>
        <tr><th>税抜価格</th><td><%= f.number_field :price %>円</td></tr>
        <tr><th>販売ステータス</th>
        <td>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中" %>
        </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-2 mx-auto">
    <div class="col-5"></div>
    <div class="col-2">
    <%= f.submit "変更を保存", class: 'btn btn-md btn-success' %>
  　<% end %>
  　</div>
  　<div class="col-5"></div>
  </div>
</div>