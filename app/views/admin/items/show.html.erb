<div class="container">
  
  <div class="row mt-5 ml-3">
    <div class="bg-secondary">
      <h4>商品詳細</h4>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="col-5">
      <%= image_tag @item.get_image(300,300), class: "img-fluid" %>
    </div>
    <div class="col-7">
      <table class="table table-md">
        <tr><th>商品名</th><td><%= @item.name %></td></tr>
        <tr><th>商品説明</th><td><%= @item.introduction %></td></tr>
        <tr><th>ジャンル</th><td><%= @item.genre.name %></td></tr>
        <tr><th>税込価格(税抜価格)</th><td><%= (@item.price * 1.1).floor.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td></tr>
        <tr><th>販売ステータス</th>
        <td class="text-success font-weight-bold">
          <% if @item.is_active == true %>
            <%= @item.is_active = "販売中" %>
          <% else %>
            <%= @item.is_active = "販売停止中" %>
          <% end %>
        </td></tr>
      </table>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-5"></div>
    <div class="col-5"><%= link_to edit_admin_item_path(@item), class: 'btn btn-md btn-success' do %>編集する<% end %></div>
    <div class="col-5"></div>
  </div>
</div>