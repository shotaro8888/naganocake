<div class="container">
  
  <div class="row p-3">
    <div class="col-md-6">
      <h4>商品一覧</h4>
    </div>
    <div class="col-md-6">
      <%= link_to "＋", new_admin_item_path %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12">
      <table class="table">
        <thead>
          <th>
            <th style="width: 10%">商品ID</th>
            <th style="width: 30%">商品名</th>
            <th style="width: 10%">税抜価格</th>
            <th style="width: 30%">ジャンル</th>
            <th style="width: 20%">ステータス</th>
          </th>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td></td>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id), class: 'text-dark' do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td class="text-success font-weight-bold"><%= item.is_active_i18n %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
    
</div>