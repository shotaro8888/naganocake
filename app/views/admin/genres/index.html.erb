<div class="container">
  
  <div class="row pt-3">
    <div class="bg-secondary">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>
  
  <div class="row pt-4">
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class: 'btn btn-md btn-success' %>
    <% end %>
  </div>
  
  <div class="row pt-4">
    <div class="col-7">
      <table class="table">
        <thead>
            <th>ジャンル</th>
            <th></th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <th><%= genre.name %></th>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-md btn-success' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-5"></div>
    
</div>