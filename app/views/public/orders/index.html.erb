<div class="container">
  <div class="row mt-5 ml-3">
    <div class="bg-secondary">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
  <div class="row mt-3">
    <table class="table table-bordered">
      <thead class="table-active">
        <tr>
          <th style="width: 15%">注文日</th>
          <th style="width: 30%">配送先</th>
          <th style="width: 20%">注文商品</th>
          <th style="width: 10%">支払金額</th>
          <th style="width: 10%">ステータス</th>
          <th style="width: 15%">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.my_address %></td>
          <td><% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
              <% end %>
          </td>
          <td><%= order.total_payment.to_s(:delimited) %>円</td>
          <td></td>
          <td><%= link_to "表示する", order_path(order.id), class: 'btn btn-md btn-primary' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>