<div class="container">
  <h4>注文履歴一覧</h4>
    <table class="table">
      <thead>
        <th>
          <th style="width: 20%">注文日</th>
          <th style="width: 30%">配送先</th>
          <th style="width: 20%">注文商品</th>
          <th style="width: 10%">支払金額</th>
          <th style="width: 10%">ステータス</th>
          <th style="width: 10%">注文詳細</th>
        </th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td></td>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.my_address %></td>
          <td><% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
              <% end %>
          </td>
          <td><%= order.total_payment %></td>
          <td></td>
          <td><%= link_to "表示する", order_path(order.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>