<div class="container">
  <div class="row">
    <div class="col-md-4">
      
        
      <table class="table">
        <thread>
          <th><th>ジャンル検索</th></th>
        </thread>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td>
              <%= link_to items_path(genre_id: genre.id) do %>
              <%= genre.name %>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      
      
    </div>
    
    <div class="col-md-8">
      <% if @genre == nil %>
        <h1>商品一覧</h1>
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image(200,100) %>
          <% end %><br>
          <%= item.name %><br>
          <%= item.price %>
          <% end %>
        </div>
        
      <% else %>
      
        <h1><%= @genre.name %>一覧</h1>
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image(200,100) %>
          <% end %><br>
          <%= item.name %><br>
          <%= item.price %>
          <% end %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>