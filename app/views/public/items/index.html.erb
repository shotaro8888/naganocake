<table class="table">
  <thread>
    <th>
      <th>ジャンル検索</th>
    </th>
  </thread>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<h1>商品一覧</h1>
<div class="d-flex flex-wrap">
  <% @items.each do |item| %>
  <%= link_to item_path(item.id) do %>
    <%= image_tag item.get_image(200,100) %>
  <% end %><br>
  <%= item.name %><br>
  <%= item.price %>
  <% end %>
</div>

