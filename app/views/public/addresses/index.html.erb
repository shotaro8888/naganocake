<div class="container">
   <div class="row mt-5 ml-3">
    <div class="bg-secondary">
      <h4>配送先登録/一覧</h4>
    </div>
  </div>
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
  <div class="row mt-5">
    <div class="col-3">郵便番号(ハイフンなし)</div>
    <div class="col-7"><%= f.text_field :postal_code %></div>
    <div class="col-2"></div>
  </div>
  <div class="row mt-2">
    <div class="col-3">住所</div>
    <div class="col-7"><%= f.text_field :address, size: "50" %></div>
    <div class="col-2"></div>
  </div>
  <div class="row mt-2">
    <div class="col-3">宛名</div>
    <div class="col-5"><%= f.text_field :name %></div>
    <div class="col-4"><%= f.submit '新規登録', class: 'btn btn-md btn-success' %></div>
  </div>
  <% end %>
<div class="row mt-5">
<table class="table">
  <thead>
    <th>
      <th style="width: 20%">郵便番号</th>
      <th style="width: 30%">住所</th>
      <th style="width: 20%">宛名</th>
      <th style="width: 30%"></th>
    </th>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td></td>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-md btn-success' %>
        <%= link_to "削除する", address_path(address.id), class: 'btn btn-md btn-danger', method: :delete %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>

</div>