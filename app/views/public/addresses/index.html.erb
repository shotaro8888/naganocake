<h1>配送先登録/一覧</h1>
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
    <p>郵便番号(ハイフンなし)</p>
      <%= f.text_field :postal_code %>
    <p>住所</p>
      <%= f.text_area :address %>
    <p>宛名</p>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
  <% end %>
  <br>

<table class="table">
  <thead>
    <th>
      <th style="width: 20%">郵便番号</th>
      <th style="width: 30%">住所</th>
      <th style="width: 20%">宛名</th>
      <th style="width: 30%"></th>
    </th>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td></td>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path(address.id) %>
        <%= link_to "削除する", address_path(address.id), method: :delete %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>