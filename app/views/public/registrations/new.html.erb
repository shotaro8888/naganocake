<div class="container">
    
  <div class="row mt-5 ml-3">
    <div class="bg-secondary">
      <h4>新規会員登録</h4>
    </div>
  </div>
  
  <div class="row mt-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-md">
        <tr><th>名前</th><td><%= f.label :last_name, "(姓)" %><%= f.text_field :last_name %><%= f.label :first_name, "(名)" %><%= f.text_field :first_name %></td></tr>
        <tr><th>フリガナ</th><td><%= f.label :last_name_kana, "(セイ)" %><%= f.text_field :last_name_kana %><%= f.label :first_name_kana, "(メイ)" %><%= f.text_field :first_name_kana %></td></tr>
        <tr><th>メールアドレス</th><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td></tr>
        <tr><th>郵便番号(ハイフンなし)</th><td><%= f.text_field :postal_code %></td></tr>
        <tr><th>住所</th><td><%= f.text_field :address %></td></tr>
        <tr><th>電話番号(ハイフンなし)</th><td><%= f.text_field :telephone_number %></td></tr>
        <tr><th>パスワード
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %><br />
                </th>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td></tr>
        <tr><th>パスワード(確認用)</th><td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td></tr>
      </table>
      <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
          <div class="actions">
            <%= f.submit "新規登録", class: 'btn btn-md btn-success' %>
          </div>
        </div>
        <div class="col-4"></div>
      </div>
      <% end %>
  </div>
  
  <div class="row mt-2">
    <div class="col-1"></div>
    <div class="col-6"><h4>既に登録済みの方</h4>
    <div class="col-5"></div>
  
    <p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>
  </div>
  
</div>