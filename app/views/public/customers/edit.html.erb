<div class="container">
  
  <div class="row mt-5 ml-3">
    <div class="bg-secondary">
    <h4>会員情報編集</h4>
    </div>
  </div>
  
  <div class="row mt-5">
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
      <table class="table table-md">
        <tr><th>氏名</th><td class="d-flex flex-row"><%= f.text_field :last_name %><%= f.text_field :first_name %></td></tr>
        <tr><th>フリガナ</th><td class="d-flex flex-row"><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td></tr>
        <tr><th>郵便番号</th><td><%= f.text_field :postal_code %></td></tr>
        <tr><th>住所</th><td><%= f.text_field :address, size: "50" %></td></tr>
        <tr><th>電話番号</th><td><%= f.text_field :telephone_number %></td></tr>
        <tr><th>メールアドレス</th><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td></tr>
      </table>
  </div>
  
  <div class="row">
    <div class="col-2"></div>
    <div class="col-4"><%= f.submit "編集内容を保存", class: 'btn btn-md btn-success' %></div>
    <% end %>
    <div class="col-6"><%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-md btn-danger' %></div>
  </div>
  
</div>

  
  