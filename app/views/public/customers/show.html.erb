<div class="container">
  
  <div class="row mt-5 ml-3">
    <div class="bg-secondary">
      <h4>マイページ</h4>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-2"><h4>登録情報</h4></div>
    <div class="col-3"><%= link_to "編集する", customers_information_edit_path, class: 'btn btn-md btn-success' %></div>
    <div class="col-7"></div>
  </div>
  
  <div class="row mt-3">
    <div class="col-10">
      <table class="table">
        <tr><th>氏名</th><td><%= @customer.last_name %><%= @customer.first_name %></td></tr>
        <tr><th>カナ</th><td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td></tr>
        <tr><th>郵便番号</th><td><%= @customer.postal_code %></td></tr>
        <tr><th>住所</th><td><%= @customer.address %></td></tr>
        <tr><th>電話番号</th><td><%= @customer.telephone_number %></td></tr>
        <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
      </table>
    </div>
    <div class="col-2"></div>
  </div>
  <div class="row mt-3">
    <div class="col-2"><h4>配送先</h4></div>
    <div class="col-5"><%= link_to "一覧を見る", addresses_path, class: 'btn btn-md btn-primary' %></div>
    <div class="col-5"></div>
  </div>
  <div class="row mt-3">
    <div class="col-2"><h4>注文履歴</h4></div>
    <div class="col-5"><%= link_to "一覧を見る", orders_path, class: 'btn btn-md btn-primary' %></div>
    <div class="col-5"></div>
  </div>
