<!DOCTYPE html>
<html>
  <head>
    <title>Cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="border-bottom border-dark">
      <nav class="navbar navbar-expand navbar-dark">
        <%= link_to "LOGO", root_path, class: 'text-dark' %>
        <div class="collapse navbar-collapse justify-content-end" id="navmenu">
          <div class="navbar-nav">
          <% if admin_signed_in? %>
            <% if request.fullpath.include? "/admin" %>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "商品一覧", admin_items_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "会員一覧", admin_customers_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "注文履歴一覧", admin_root_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "ジャンル一覧", admin_genres_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'text-dark'%>
                </button>
              </li>
            <% else %>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "About", about_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "商品一覧", about_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "新規登録", new_customer_registration_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "ログイン", new_customer_session_path, class: 'text-dark' %>
                </button>
              </li>
            <% end %>
          <% elsif customer_signed_in? %>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "マイページ", customers_information_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "商品一覧", items_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "カート", cart_items_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'text-dark' %>
                </button>
              </li>
          <% else %>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "About", about_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "商品一覧", about_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "新規登録", new_customer_registration_path, class: 'text-dark' %>
                </button>
              </li>
              <li class="nav-item nav-link active">
                <button class="btn btn-outline-secondary" type="button">
                <%= link_to "ログイン", new_customer_session_path, class: 'text-dark' %>
                </button>
              </li>
          <% end %>
          <form class="d-flex h-75 mt-2">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success"><i class="fas fa-search"></i></button>
          </form>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
